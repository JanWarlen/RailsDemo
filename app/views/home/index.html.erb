<h1>Hello World! <%= @user.name %></h1>

<div class="row">
  <div class="col-md-3 col-12 d-none d-md-block">
    <div class="card p-2">
      <% unless current_user.avatar.nil? %>
        <%= image_tag current_user.avatar.variant(resize: "128x128!"), class: "rounded-circle m-4" %>
      <% end %>
      <%#= image_tag current_user.avatar.url, class: 'card-img-top rounded-circle' %>
      <div class="card-body">
        <h4 class="card-tittle"><%= "@#{@user.name}" %></h4>
        <p class="card-text">
          <span class="text-secondary">用户信息</span>
        </p>
      </div>
    </div>
  </div>
  <div class="col-md-9 col-12">
    <%= form_with model: Post.new do |f| %>
      <div class="input-group pb-4 mx-0">
        <%= f.text_field :body, class: "form-control", placeholder: "What do we do now?" %>

        <span class="input-group-btn">
          <%= f.submit "投稿", class: "btn btn-primary" %>
        </span>
      </div>
    <% end %>
    <%= render partial: "post", collection: @posts %>
  </div>
</div>